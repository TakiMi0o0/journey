<div class="contents row">
  <div class="format">
    <%= form_with model: @user, url: user_session_path, id: "new_user", class: "new_user", local: true do |f| %>
      <div class="user-in">
        ログイン
      </div>
      <div class="form-set">
        <div class="form">
          メールアドレス
        </div>
        <%= f.email_field :email, class:"email", autofocus: true %>
      </div>

      <div class="form-set">
        <div class="form">
          パスワード
        </div>
        <%= f.password_field :password, class:"password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-set">
          <div class="form">
            ログインを記憶する
          </div>
          <%= f.check_box :remember_me, class:"remember_me" %>
        </div>
      <% end -%>

      <div class="form-set">
        <%= f.submit "Login", class:"submit-btn" %>
      </div>
    <% end %>
  </div>
</div>
