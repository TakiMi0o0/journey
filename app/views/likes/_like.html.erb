<% if user_signed_in? && book.liked_by?(current_user) %>
  <%= link_to image_tag("like.png"), book_likes_path(book.id), data: { turbo_method: :delete }, id: "book_liked" %>
<% elsif user_signed_in? %>
  <%= link_to image_tag("icon_heart.png"), book_likes_path(book.id), data: { turbo_method: :post }, id: "book_like" %>
<% end %>

