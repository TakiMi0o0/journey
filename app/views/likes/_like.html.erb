<% if user_signed_in? && book.liked_by?(current_user) %>
  <%= link_to image_tag("like.png", class: "book_liked"), book_likes_path(book.id), data: { turbo_method: :delete }, remote: true %>
<% else %>
  <%= link_to image_tag("icon_heart.png", class: "book_like"), book_likes_path(book.id), data: { turbo_method: :post }, remote: true %>
<% end %>