<div class="tab">
  <div class="list">
    <div class="top">
      <%= @category %>
    </div>

    <div class="list-index">
      <% @lists.each do |list| %>
        <div class="lists">
          <div class="list-info">
            <%= link_to edit_book_list_path(list.book, list) do %>
              <div class="list-main">
              
                <div class="list-content">
                  <%= list.content %>
                </div>
              
                <% if list.quantity.present? %>
                  <div class="list-quantity">
                    数量　<%= list.quantity %>
                  </div>
                <% end %>
              </div>

              <div class="list-sub">
                <% if list.list_memo.present? %>
                  <div class="list-memo">
                    <%= list.list_memo %>
                  </div>
                <% end %>
                <% if list.price.present? %>
                  <div class="list-price">
                    金額　<%= list.price %>
                  </div>
                <% end %>
                <% if list.image.attached? %>
                  <%= image_tag list.image, class: "list-img" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <%= render "shared/tab" %>
</div>