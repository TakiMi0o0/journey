<%= form_with model: @schedule, url: book_schedules_path(@book), local: true do |f| %>

  <div class="weight-bold-text">
    内容<span>*</span>
  </div>
  <%= f.text_field :summary, class:"schedule-summary", id:"schedule-name", maxlength:"50" %>
  <div class="schedules-explain">
    <div class="weight-bold-text">
      日時
    </div>
    <%= f.datetime_field :date_time, class:"schedule-text", id:"schedule-info" %>
  </div>
  <div class="schedules-explain">
    <div class="weight-bold-text">
      アイコン
    </div>
    <%= f.text_field :icon, class:"icon" %>
  </div>
  <div class="schedules-explain">
    <div class="weight-bold-text">
      場所
    </div>
    <%= f.text_field :location, class:"location" %>
  </div>
    <div class="books-explain">
    <div class="weight-bold-text">
      出発～到着
    </div>
    <%= f.text_field :departure, class:"departure", placeholder:"出発地" %>
    <%= f.datetime_field :departure_time, class:"period" %>
    ～
    <%= f.text_field :arrival, class:"arrival", placeholder:"到着地" %>
    <%= f.datetime_field :arrival_time, class:"period" %>
    
  </div>
  <div class="schedules-explain">
    <div class="weight-bold-text">
      費用
    </div>
    <%= f.text_field :cost, class:"cost" %>
  </div>
  <div class="schedules-explain">
    <div class="weight-bold-text">
      URL1
    </div>
    <%= f.text_field :url1, class:"url1" %>
  </div>
  <div class="schedules-explain">
    <div class="weight-bold-text">
      URL2
    </div>
    <%= f.text_field :url2, class:"url2" %>
  </div>
  <div class="schedules-explain">
    <div class="weight-bold-text">
      メモ
    </div>
    <%= f.text_area :memo, class:"memo" %>
  </div>

  <div class="img-upload">
    <div class="weight-bold-text">
      画像
    </div>
    <div class="click-upload">
      <p>クリックしてファイルをアップロード</p>
      <%= f.file_field :image, id:"schedule-image" %>
    </div>
  </div>
  <div class="sell-btn-contents">
    <%= f.submit "作成！" ,class:"sell-btn" %>
    <%=link_to 'もどる', book_schedules_path, class:"back-btn" %>
  </div>

<% end %>