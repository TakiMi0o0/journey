<%= render "shared/header" %>

<div class="new">
  <%= form_with model: @schedule, url: book_schedules_path(@book), local: true do |f| %>
    <div class="new-form-set">
      <div class="new-form">
        タイトル<span>*</span>
      </div>
      <%= f.text_field :summary, class:"schedule-summary", placeholder:"20文字まで", maxlength:"20" %>
    </div>
    <div class="new-form-set">
      <div class="new-form">
        日時<span>*</span>
      </div>
      <%= f.datetime_field :date_time, value: @book.start.strftime('%Y-%m-%dT%T'), class:"schedule-text" %>
    </div>
    <div class="new-form-set">
      <div class="new-form">
        アイコン
      </div>
      <%= f.text_field :icon, class:"icon" %>
    </div>
    <div class="new-form-set">
      <div class="new-form">
        場所
      </div>
      <%= f.text_field :location, class:"location" %>
    </div>
    <div class="new-form-set">
      <div class="new-form">
        出発～到着
      </div>
      <%= f.text_field :departure, class:"departure", placeholder:"出発地" %>
      <%= f.datetime_field :departure_time, value: (f.object.departure_time || Time.now.strftime("%Y-%m-%d")), class:"period" %>
      ～
      <%= f.text_field :arrival, class:"arrival", placeholder:"到着地" %>
      <%= f.datetime_field :arrival_time, value: (f.object.arrival_time || Time.now.strftime("%Y-%m-%d")), class:"period" %>
    </div>
    <div class="new-form-set">
      <div class="new-form">
        費用
      </div>
      <%= f.text_field :cost, class:"cost" %>
    </div>
    <div class="new-form-set">
      <div class="new-form">
        URL1
      </div>
      <%= f.text_field :url1, class:"url1" %>
    </div>
    <div class="new-form-set">
      <div class="new-form">
        URL2
      </div>
      <%= f.text_field :url2, class:"url2" %>
    </div>
    <div class="new-form-set">
      <div class="new-form">
        メモ
      </div>
      <%= f.text_area :memo, class:"memo" %>
    </div>

    <div class="new-form-set">
      <div class="new-form">
        イメージ
      </div>
      <div class="click-upload">
        <%= f.file_field :image, class:"upload-btn"%>
      </div>
    </div>
    <div class="hissu">
      <span>*</span>は必須項目です
    </div>
    <div class="new-form-set">
      <%= f.submit "追加！" ,class:"new-btn" %>
      <%=link_to 'もどる', book_schedules_path(@book), class:"back-btn" %>
    </div>
  <% end %>
</div>

<%= render "shared/footer" %>